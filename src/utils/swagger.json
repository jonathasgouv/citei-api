{
    "openapi": "3.0.0",
    "info": {
        "title": "Citei",
        "description": "Citei é api grátis e open source de frases. A api conta atualmente com quase 600 mil frases.",
        "contact": {
            "email": "jonathas_gouv@hotmail.com",
            "website": "https://jonathasgouv.github.io"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://citei.herokuapp.com/api/",
            "description": "API de produção"
        }
    ],
    "host": "localhost:3333",
    "basePath": "/api",
    "tags": [
        {
            "name": "authors",
            "description": "Rotas relacionadas aos autores"
        },
        {
            "name": "categories",
            "description": "Rotas relacionadas as categorias"
        },
        {
            "name": "quotes",
            "description": "Rotas relacionadas as citações em geral"
        }
    ],
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/categories": {
            "get": {
                "tags": [
                    "categories"
                ],
                "summary": "Lista todas as categorias",
                "operationId": "categories",
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "offset",
                        "in": "query",
                        "description": "Primeira posição a ser retornada",
                        "required": false,
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "default": 0
                        },
                        "collectionFormat": "multi"
                    },
                    {
                        "name": "count",
                        "in": "query",
                        "description": "Número de categorias a serem retornadas. Máximo de 100",
                        "required": false,
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "default": 20
                        },
                        "collectionFormat": "multi"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Categories"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/categories/{category}": {
            "get": {
                "tags": [
                    "categories"
                ],
                "summary": "Lista citações de uma categoria específica",
                "operationId": "categories",
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "description": "Primeira posição a ser retornada",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "collectionFormat": "multi"
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "description": "Primeira posição a ser retornada",
                        "required": false,
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "default": 0
                        },
                        "collectionFormat": "multi"
                    },
                    {
                        "name": "count",
                        "in": "query",
                        "description": "Número de citações a serem retornadas. Máximo de 100",
                        "required": false,
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "default": 20
                        },
                        "collectionFormat": "multi"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Quotes"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid category"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/authors": {
            "get": {
                "tags": [
                    "authors"
                ],
                "summary": "Lista todos os autores",
